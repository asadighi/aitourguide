# ─── Single consolidated .env at monorepo root ───
# Copy this to .env and fill in your values.
# packages/backend/.env is a symlink to this file.

# database
DATABASE_URL=postgresql://YOUR_USER@localhost:5432/aitourguide

# openai
OPENAI_API_KEY=sk-your-openai-api-key

# oauth - google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# oauth - apple
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id

# jwt
JWT_SECRET=your-jwt-secret-change-in-production

# server
PORT=4000
NODE_ENV=development

# tts
# Voice options: alloy, echo, fable, onyx, nova, shimmer
# Recommended for tour guide tone: nova (warm, engaging)
TTS_AUDIO_DIR=./audio-cache
TTS_VOICE=nova
TTS_MODEL=tts-1
TTS_SPEED=1.0

# llm
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
LLM_VISION_TEMPERATURE=0.3

